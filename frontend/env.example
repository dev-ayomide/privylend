# PrivyLend Environment Configuration
# Copy this file to .env.local and update with your values

# Set to 'false' to enable production mode (connect to Canton Network)
# Set to 'true' or leave unset to use mock data (demo mode)
NEXT_PUBLIC_USE_MOCK_DATA=false

# Canton Network Ledger URL
# Default: http://localhost:6865 (Canton sandbox)
# Production: Your Canton Network endpoint
NEXT_PUBLIC_LEDGER_URL=http://localhost:6865

# Authentication token for Canton Network
# Leave empty for development/testing
# In production, this should be set securely
NEXT_PUBLIC_LEDGER_TOKEN=

